<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f44336"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/record_audio"
        android:visibility="gone"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="#212121"
        android:layout_height="match_parent">

        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rippler"
            app:rb_color="#ff8207"
            app:rb_radius="32dp"
            app:rb_rippleAmount="4"
            app:rb_duration="3000"
            app:rb_scale="6">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:id="@+id/record_btn"
                android:src="@drawable/record"/>

        </com.skyfishjy.library.RippleBackground>

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="#00f44336"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/recording_left_bot" />

            <ImageView
                android:background="#00f44336"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:id="@+id/recording_right_bot" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/recorded_files"
        android:visibility="gone"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="#212121"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/file_name"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#FFF"
            android:textSize="50dp"
            android:text="file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="#00f44336"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/recorded_left_bot" />

            <ImageView
                android:background="#00f44336"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                android:id="@+id/recorded_right_bot" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/home"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="#FFF"
        android:textSize="50dp"
        android:text="HOME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="#00f44336"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/home_left_bot" />

        <ImageView
            android:background="#00f44336"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:id="@+id/home_right_bot" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="#00f44336"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/home_left_top" />

        <ImageView
            android:background="#00f44336"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:id="@+id/home_right_top" />

    </LinearLayout>


</RelativeLayout>